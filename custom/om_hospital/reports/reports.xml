<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <report
                id="report_patient"
                model="hospital.patient"
                string="Patient Card"
                name="om_hospital.report_patient_view"
                file="patient card"
                report_type="qweb-pdf"/>

        <template id="report_patient_view">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.internal_layout">
                        <div class="page">
                            <dov class="row">
                                <div class="col-xs-8 offset-xs-2">
                                    <table class="table table-condensed" style="border: 3px solid black !important">
                                        <tr>
                                            <td width="40%">
                                                <p style="text-align:center;padding-top:10px;">
                                                    <img t-if="not doc.image"
                                                         t-att-src="'/web/static/src/img/placeholder.png'" height="120"
                                                         border="1" width="120"/>
                                                    <img t-else=""
                                                         t-att-src="'data:image/png;base64,%s' % to_text(doc.image)" height="120"
                                                         border="1" width="120"/>
                                                </p>
                                                <p style="text-align:center">
                                                    <h2 t-field="doc.patient_name"></h2>
                                                </p>


                                            </td>
                                            <td width="60%">
                                                <table><tr>
                                                    <td>
                                                        <p style="text-align:right"><strong>Age: </strong></p>
                                                        <p style="text-align:right"><strong>Group: </strong></p>
                                                        <p style="text-align:right"><strong>Ph No:</strong></p>
                                                    </td>
                                                    <td>
                                                        <p style="text-align:right; padding-left:10px;"><strong t-field="doc.patient_name"></strong></p>
                                                        <p style="text-align:right; padding-left:10px;"><strong t-field="doc.patient_age"></strong></p>
                                                        <p style="text-align:right; padding-left:10px;"><strong t-field="doc.age_group"/></p>
                                                    </td>
                                                </tr></table>

                                            </td>
                                        </tr>

                                    </table>

                                </div>

                            </dov>

                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>